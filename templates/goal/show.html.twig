{% extends 'base.html.twig' %}

{% block title %}{{'Goal'|trans}}{% endblock %}

{% block body %}

    {% if app.request.get('update') == 'success' %}
        <div class="text-center mx-auto alert alert-success alert-dismissable fade show" role="alert">
            <button type="button" class="close" data-dismiss="alert">
                <span aria-hidden="true">&times;</span>
            </button>

            <h5>{{'Goal successfuly updated'|trans}}</h5>
        </div>
    {% endif %}

    <a href="{{ path('goal_index') }}"><i class="fas fa-chevron-left h1 back-btn"></i></a>
    
    <div class='row justify-content-center mb-5'>
        <div class='col text-center'>
            <a href="{{ path('goal_edit', {'id': goal.id}) }}"><button class="btn btn-lg btn-no-bg hover-pr rad-rounded-xs px-5">{{'Edit'|trans}}</button></a>
        </div>
    </div>

    <h1 class="text-center mb-5">{{ goal.title }}</h1>

    <div class='d-flex row mb-5 justify-content-around'>

        <div class='mb-4'>
            <div class='info-box-header p-3 text-center'><i class="info-box-icon fas fa-chalkboard-teacher fa-2x"></i><label class='h4 px-3'>{{'Associated trainings'|trans}}</label></div>
            <div class='info-box-content px-4 py-3 text-center'>
                <h5>{{'Number : '|trans}}{{ goal.trainings|length }}</h5>
                <hr>
                {% if goal.trainings|length > 0 %}
                    {% for training in goal.trainings %}
                        <a href="{{ path('training_show', {'id': training.id}) }}"><h5>{{ training.title }}</h5></a>
                        <hr>
                    {% endfor %}
                {% else %}
                    <h5 class="font-italic text-danger">{{'No trainings for this goal'|trans}}</h5>
                {% endif %}
            </div>
        </div>
    </div>

{% endblock %}
