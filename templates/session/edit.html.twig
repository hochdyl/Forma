{% extends 'base.html.twig' %}

{% block title %}{{'Edit Session'|trans}}{% endblock %}

{% block body %}

    {% if app.request.get('instructor') == 'success' %}
        <div class="text-center mx-auto alert alert-success alert-dismissable fade show" role="alert">
            <button type="button" class="close" data-dismiss="alert">
                <span aria-hidden="true">&times;</span>
            </button>

            <h5>{{'Instructor successfuly added'|trans}}</h5>
        </div>
    {% endif %}

    <a href="{{ path('session_show', {'id': session.id}) }}"><i class="fas fa-chevron-left h1 back-btn"></i></a>

    <h1 class="text-center mb-5">{{'Edit Session'|trans}}</h1>

    {{ include('session/_form.html.twig', {'button_label': 'Update'|trans }) }}

    {{ include('session/_delete_form.html.twig') }}
    
{% endblock %}
